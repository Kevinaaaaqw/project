<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>購物車</title>
    <%- include('link') %>
</head>
<body>
    <%- include('../header')%>
    <div class="col-12 container">
        <div class="d-flex align-items-center">
          <div class=" col-3">購物車</div>
          <img
            class=" col-9 d-flex justify-content-center img1000"
            src="/public/img/icon/Group 322.png"
            alt=""
          />
        </div>
        <form class="col-12" action="/order" method="put" id="product">
            <div class="mt-5">
              <% for(let i=0;i<item.length;i++){%>
                <div class="d-flex ps-2 pe-5 align-items-center borderclass">
                  <input class="imgActive" type="checkbox" id="UID001" /><a href=""
                    ><img class="imgActive" src="public/img/icon/Home.png" alt=""
                  /></a>
                  <div class="ps-5"><%- item[i].productUser %></div>
                  <div class="ps-5">聯絡賣家</div>
                </div>
                <%for(let o=0;o<item[i].product.length;o++){ %>
                <div class="borderclass_1 d-flex justify-content-between align-items-center ps-2 pe-5 pt-3 pb-3 align-item[i]s-center cartFontSize" >
                    <input class="imgActive" type="checkbox" id="UID001PID001" />
                    <img
                      class="img100"
                      src="<%- item[i].product[o].src %>"
                      alt=""
                      />
                    <div class=""><%- item[i].product[o].productName %></div>
                    <div class="">
                      <div>租借日期</div>
                      <div><%- item[i].product[o].rentStart%></div>
                    </div>
                    <div class="">
                      <div>歸還日期</div>
                      <div><%- item[i].product[o].rentEnd%></div>
                    </div>
                    <div class="">
                      <div>天數</div>
                      <div><%- item[i].product[o].day%></div>
                    </div>
                    <div class="">
                      <div>租金</div>
                      <div><%- item[i].product[o].rent%>元</div>
                    </div>
                    <div class="">
                      <div>押金</div>
                      <div><%- item[i].product[o].deposit%>元</div>
                    </div>
                    <button  class="" onclick="eventpreventDefault(this)">刪除</button>
                  </div>
                  <%}%>
                  <%}%>
                  <div class="mb-5" style="border: 1px solid black;"></div>
                </div>
              </form>
            </div>
            <div id="check" class="d-flex justify-content-center align-items-center" >確定刪除資料嗎?</div>
    <script>
      function eventpreventDefault(e){
        event.preventDefault()
        $('#check').dialog("open");
        $('#check').dialog({
          buttons: {
            '確定': function () {
              $(e).parent().remove()
              $(this).dialog("close");
            },
            '取消':function(){
              $(this).dialog("close");
            }
          },
        })
      }
      $('#check').dialog({
        autoOpen: false,
        height:400,
        width:500,
        dialogClass: "no-close",
        show: {
        effect: "blind",
        duration: 500
      },
        hide: {
        effect: "explode",
        duration: 500
      },
        buttons: {
          '確定': function () {
            console.log(e)
            $(this).dialog("close");
          },
          '取消':function(){
            $(this).dialog("close");
          }
        },
        modal:true,
      })
    </script>
</body>
</html>